class Solution {
    public boolean isPowerOfTwo(int n) {
        if (n <= 0) {
            return false; // Negative numbers and zero are not powers of two
        } else if ((n & (n - 1)) == 0) {
            return true; // If only one bit is set, it's a power of two
        } else {
            return false; // Otherwise, it's not a power of two
        }
        }
}
